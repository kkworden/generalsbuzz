<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- the theme applied to the application or activity -->
    <style name="WLTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBar</item>
		<item name="android:titleTextStyle">@color/white</item>
    </style>

    <!-- ActionBar styles -->
    <style name="ActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/navy</item>
        <item name="android:actionBarSize">?attr/actionBarSize</item>
        <item name="android:titleTextStyle">@style/ActionBarTitle</item>
    </style>
    
    <style name="ActionBarTitle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">@dimen/activity_margin</item>
    </style>
    
</resources>
