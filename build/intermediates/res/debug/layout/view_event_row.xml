<RelativeLayout android:id="@+id/event_row"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/event_row_padding"
    android:paddingLeft="@dimen/event_row_padding"
    android:paddingBottom="@dimen/event_row_padding"
    android:paddingRight="@dimen/event_row_padding_right"
    android:background="@drawable/style_event_row_misc" >
    
    <TextView
        android:id="@+id/event_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/event_row_padding_right"
        android:layout_marginBottom="4dp"
        android:textColor="@color/text_color"
        android:ellipsize="end"
        android:lines="1"
        android:text="Empty Title"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/event_title"
        android:text="(Unspecified)"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:layout_alignBaseline="@+id/event_location"
        android:layout_alignParentRight="true"
        android:text="0:00 AM - 0:00 AM"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/event_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/event_time"
        android:layout_alignTop="@+id/event_title"
        android:layout_marginLeft="8dp"
        android:focusable="false"
        android:background="@drawable/style_event_menu"
        android:src="@drawable/event_menu"
        android:contentDescription="Settings" />
    
</RelativeLayout><!-- From: file:/C:/Users/Centurion/AndroidStudioProjects/generalsbuzz/app/src/main/res/layout/view_event_row.xml -->